/* pages/myGoods/myGoods.wxss */

page {
  background: #f5f6f9;
  padding-bottom: 170rpx;
}

.goods-list {
  width: 94%;
  margin-left: 3%;
  margin-right: 3%;
  height: 260rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 4rpx 12rpx 0rpx rgba(111, 119, 140, 0.18);
  border-radius: 8rpx;
  margin-top: 32rpx;
}

.goods-list-left {
  width: 30%;
  text-align: left;
  margin-left: 3%;
}

.goods-img {
  width: 208rpx;
  height: 208rpx;
  margin-top: 24rpx;
}

.goods-list-right {
  width: 62%;
  margin-right: 3%;
  margin-left: 2%;
  position: relative
}

.goods-name {
  width: 100%;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  margin-top: 24rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
}

.goods-price {
  width: 100%;
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(224, 35, 35, 1);
}

.goods-button {
  width: 80%;
  margin-left: 20%;
 position: absolute;
 bottom: 24rpx;
}

.shanchu-button {
  width: 88rpx;
  height: 52rpx;
  border-radius: 8rpx;
  border: 2rpx solid rgba(202, 202, 202, 1);
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 52rpx;
  text-align: center;
  margin-right: 8%;
}

.xiugai-button {
  width: 88rpx;
  height: 52rpx;
  border-radius: 8rpx;
  border: 2rpx solid #f4820d;
  font-size: 28rpx;
  font-weight: 400;
  color: #f4820d;
  line-height: 52rpx;
  text-align: center;
  margin-right: 8%;
}

.zhiding-button {
  width: 88rpx;
  height: 52rpx;
  border-radius: 8rpx;
  background: #e02323;
  font-size: 28rpx;
  font-weight: 400;
  color: #fff;
  line-height: 52rpx;
  text-align: center;
}
.goods-bottom{
  width: 100%;
  text-align: center;
  position: fixed;
  bottom: 30rpx;
}
.add-img{
  width: 590rpx;
  height: 128rpx;
}