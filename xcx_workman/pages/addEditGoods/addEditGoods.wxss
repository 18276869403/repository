/* pages/addEditGoods/addEditGoods.wxss */

.content {
  width: 100%;
}

.content-title {
  width: 17%;
  text-align: left;
  margin-left: 3%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}

.content-item {
  width: 94%;
  margin-left: 3%;
  margin-right: 3%;
  text-align: right;
  margin-top: 32rpx;
  height: 72rpx;
  border: 2rpx solid rgba(240, 240, 240, 1);
  position: relative;
}

.enter {
  width: 5%;
  text-align: right;
}

.enter-img {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 16rpx;
  top: 16rpx;
}

.shurukuang {
  width: 77%;
  margin-right: 3%;
  height: 72rpx;
  line-height: 72rpx;
  color: #333;
  font-size: 14px;
}

.placeholder {
  color: #333;
  font-size: 28rpx;
}

.placeholder1 {
  font-size: 14px;
  color: #666;
}

.content-item-textarea {
  width: 100%;
  margin-top: 32rpx;
}

.textarea {
  width: 640rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  height: 115px;
  border: 2rpx solid rgba(240, 240, 240, 1);
  padding-top: 16rpx;
  padding-bottom: 16rpx;
  padding-left: 25rpx;
  padding-right: 25rpx;
  background: #f5f6f9;
}

/* 底部 */

.bottom {
  width: 100%;
  margin-top: 65rpx;
  margin-bottom: 160rpx;
}

.bottom-left {
  width: 50%;
  text-align: center;
  background: #fff;
  font-size: 20px;
  color: #ed3030;
  height: 100rpx;
  line-height: 100rpx;
}

.bottom-right {
  text-align: center;
  background: #e02323;
  font-size: 16px;
  color: #fff;
  width: 80%;
  margin-left: 10%;
  margin-right: 10%;
  height: 80rpx;
  line-height: 80rpx;
  background: rgba(224, 35, 35, 1);
  box-shadow: 0rpx 6rpx 24rpx 0rpx rgba(220, 14, 14, 0.41);
  border-radius: 40rpx;
}

/* 晒图详情 */

.showImg {
  width: 94%;
  margin-left: 3%;
  margin-right: 3%;
  display: flex;
  flex-flow: row wrap;
  margin-top: 30rpx;
}

.showImg-item {
  width: 50%;
  text-align: center;
  position: relative;
}

.delete-img {
  position: absolute;
  right: 10rpx;
  width: 44rpx;
  height: 44rpx;
}

.show-img {
  width: 334rpx;
  height: 228rpx;
  margin-bottom: 10rpx;
  border-radius: 8rpx;
}

.fabu-img {
  width: 52rpx;
  height: 52rpx;
  margin-top: 60rpx;
  margin-bottom: 16rpx;
}

.showImg-text {
  width: 100%;
  text-align: left;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  margin-bottom: 24rpx;
}
