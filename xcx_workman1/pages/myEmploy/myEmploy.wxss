/* pages/myEmploy/myEmploy.wxss */

page {
  background: #f5f6f9;
  padding-bottom: 50rpx;
}

.top {
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  background: #fff;
}

.xuanzhong {
  width: 50%;
  text-align: center;
}

.bian {
  border-bottom: 6rpx solid #e02323;
  padding-bottom: 30rpx;
}

.top-item-checked {
  width: 100%;
  text-align: center;
  height: 98rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #e02323;
  line-height: 98rpx;
}

.top-item-normal {
  height: 98rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #999;
  line-height: 98rpx;
  width: 100%;
  text-align: center;
}

.content {
  width: 94%;
  margin-left: 3%;
  margin-right: 3%;
}

.content-list {
  width: 94%;
  padding-left: 3%;
  padding-right: 3%;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 4rpx 12rpx 0rpx rgba(111, 119, 140, 0.18);
  border-radius: 8rpx;
  margin-top: 32rpx;
}

.content-list-top {
  border-bottom: 2rpx solid #f0f0f0;
  height: 118rpx;
  line-height: 118rpx;
}

.list-top-img {
  width: 12%;
  text-align: left;
}

.avator-img {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-top: 24rpx;
}

.list-top-text {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  width: 74%;
  text-align: left;
}
.list-top-edit{
  width: 7%;
  text-align: left;
}
.list-top-delete {
  width: 7%;
  text-align: right;
}

.delete-img {
  width: 30rpx;
  height: 30rpx;
}

.list-content-item {
  margin-top: 15rpx;
  width: 100%;
  margin-bottom: 10rpx;
}

.item-title {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  width: 20%;
  text-align: left;
}

.item-type {
  font-size: 24rpx;
  font-weight: 400;
  color: #333;
  width: 80%;
  text-align: left;
}

.content-list-bottom {
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  position: relative;
  border-top: 2rpx solid #f0f0f0;
  margin-top: 10rpx;
  padding-bottom: 10rpx;
}

.online-button {
  width: 156rpx;
  height: 60rpx;
  background: rgba(224, 35, 35, 1);
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 60rpx;
  text-align: center;
  margin-top: 20rpx;
  float: right;
  position: absolute;
  right: 0rpx;
}

.phone-button {
  width: 156rpx;
  height: 60rpx;
  border-radius: 8rpx;
  border: 2rpx solid rgba(244, 130, 13, 1);
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(244, 130, 13, 1);
  line-height: 60rpx;
  margin-top: 20rpx;
  text-align: center;
  position: absolute;
  right: 180rpx;
}
